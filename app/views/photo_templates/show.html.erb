<h1>Photos Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_photo.image %>">
  </dd>
    <p>
  <dt>Caption</dt>
  <dd>
    <p><%= @the_photo.caption %>.</p>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%= @the_photo.created_at %>
  </dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id %>">
      <label for="update_image">Image</label>
      <input id="update_image" type="text" name="query_image" placeholder="Enter a URL for the image..." value="<%= @the_photo.image %>">

      <label for="update_caption">Caption</label>
      <textarea id="update_caption" name="query_caption" placeholder="Enter a caption for the photo..."><%= @the_photo.caption %></textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>;">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @the_photo.comments.each do |a_comment| %>
  <tr>
    <td>
      <%= a_comment.commenter.username %>
    </td>

    <td>
      <%= a_comment.body %>
    </td>

    <td>
      <%= a_comment.created_at %>
    </td>
  </tr>
  <% end %>
  </table>

 <h3>Add a new comment</h3>

<form action="/insert_comment">
  <label for="comment_photo_id">Photo ID</label>
  <input id="comment_photo_id" type="text" value="<%= @the_photo.id %>" name="input_photo_id">

  <label for="comment_author_id">Author ID</label>
  <input id="comment_author_id" type="text" name="query_author_id">

  <label for="input_comment">Comment</label>
  <textarea id="input_comment" name="query_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
